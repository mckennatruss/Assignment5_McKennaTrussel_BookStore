<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment5_McKennaTrussel_BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-dark">

    <div class="bg-light text-dark p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand ml-3">Read a Good Book!</div>
                <div class="col-6 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>


    <div class="row m-1 p-1 text-info">
        <div class="col-3">
            <h1>Enjoy your Reading Purchases!</h1>
            @*vc is view component*@
            <vc:navigation-menu />
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>

</body>
</html>






