@model Book


<div class="text-info list-group-item-action">
    <h5>Title: @Model.Title</h5>
    <div>
        <p>Author: @Model.AuthorFirstName @Model.AuthorMiddleName @Model.AuthorLastName</p>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
    </div>
    <form id="@Model.BookId" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Category
            <button type="submit" class="btn-info" style="float:right">
                Purchase
            </button>
        </span>
    </form>
    <div>
        <p>Classification/Category: @Model.Classification / @Model.Category </p>
        <p>Price: $@Model.Price</p>
        <p>Number of Pages: @Model.Pages</p>
    </div>


</div>
